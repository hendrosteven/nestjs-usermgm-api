generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_HEROKU")
}

model User {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String
  source String

  fullName String?

  verified Boolean

  numberOfLogin Int @default(0)

  sessions Session[]

  @@map("users")
}

model Session {
  id        String      @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessionId  String

  userId String
  user   User @relation(fields: [userId], references: [id])

  @@map("sessions")
}